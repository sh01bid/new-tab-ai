{
  "manifest_version": 3,
  "name": "New Tab AI",
  "description": "AI-powered New Tab Dashboard",
  "version": "1.0.0",
  "permissions": [
    "storage",
    "tabs",
    "topSites",
    "scripting"
  ],
  "commands": {
    "wxt:reload-extension": {
      "description": "Reload the extension during development",
      "suggested_key": {
        "default": "Alt+R"
      }
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "host_permissions": [
    "http://127.0.0.1/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval' http://127.0.0.1:3000; object-src 'self';",
    "sandbox": "script-src 'self' 'unsafe-inline' 'unsafe-eval' http://127.0.0.1:3000; sandbox allow-scripts allow-forms allow-popups allow-modals; child-src 'self';"
  }
}